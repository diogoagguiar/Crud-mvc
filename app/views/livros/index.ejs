<h1>Lista de Livros</h1>
<a href="/livros/create">Novo Livro</a>
<table border="1">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Título</th>
            <th>Editora</th>
            <th>Autor</th>
            <th>Ano</th>
            <th>Assunto</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% livros.forEach(livro=> { %>
            <tr>
                <td>
                    <%= livro.ISBN %>
                </td>
                <td>
                    <%= livro.nome_livro %>
                </td>
                <td>
                    <%= livro.nome_editora %>
                </td>
                <td>
                    <%= livro.autor_livro %>
                </td>
                <td>
                    <%= livro.ano_publicacao %>
                </td>
                <td>
                    <%= livro.assunto %>
                </td>
                <td>
                    <a href="/livros/edit/<%= livro.ISBN %>">Editar</a>
                    <form action="/livros/delete/<%= livro.ISBN %>" method="POST" style="display:inline;">
                        <button type="submit"
                            onclick="return confirm('Tem certeza que deseja excluir este livro?');">Excluir</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>